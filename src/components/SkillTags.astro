---
interface Props {
  title: string;
  skills: string[];
}

const { title, skills } = Astro.props;
---

<div>
  <h3 class="text-sm font-semibold text-muted uppercase tracking-wider mb-3">{title}</h3>
  <div class="flex flex-wrap gap-2">
    {skills.map(skill => (
      <span class="px-3 py-1.5 text-sm font-medium bg-tag-bg text-tag-text rounded-full">
        {skill}
      </span>
    ))}
  </div>
</div>
