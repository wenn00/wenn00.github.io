---
interface TimelineItem {
  school: string;
  department: string;
  period: string;
  description: string;
}

interface Props {
  items: TimelineItem[];
}

const { items } = Astro.props;
---

<div class="relative">
  <!-- Timeline line -->
  <div class="absolute left-4 top-2 bottom-2 w-0.5 bg-border"></div>

  <div class="flex flex-col gap-8">
    {items.map((item) => (
      <div class="relative pl-12">
        <!-- Dot -->
        <div class="absolute left-2.5 top-1.5 w-3 h-3 rounded-full bg-primary border-2 border-white"></div>

        <div class="bg-white rounded-lg border border-border p-5">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2">
            <h3 class="text-lg font-semibold text-heading">{item.school}</h3>
            <span class="text-sm text-muted">{item.period}</span>
          </div>
          <p class="text-sm font-medium text-primary mb-2">{item.department}</p>
          <p class="text-sm text-body">{item.description}</p>
        </div>
      </div>
    ))}
  </div>
</div>
