---
interface Props {
  title: string;
  description: string;
  tags: string[];
  image?: string;
  github?: string;
  demo?: string;
  video?: string;
  report?: string;
  isPrivate?: boolean;
}

const { title, description, tags, image, github, demo, video, report, isPrivate = false } = Astro.props;
const hasLinks = github || demo || video || report;
---

<div class="bg-white rounded-xl border border-border shadow-sm hover:shadow-md hover:-translate-y-1 transition-all duration-300">
  <!-- Project Image -->
  {image && (
    <div class="aspect-video overflow-hidden rounded-t-xl bg-bg-gray">
      <img src={image} alt={title} class="w-full h-full object-cover" />
    </div>
  )}

  <!-- Content -->
  <div class="p-5">
    <div class="flex items-center gap-2 mb-2">
      <h3 class="text-lg font-semibold text-heading">{title}</h3>
      {isPrivate && (
        <span class="inline-flex items-center gap-1 text-xs text-muted" title="Private repository">
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
          </svg>
          <span data-i18n="projects.private_repo">私有專案</span>
        </span>
      )}
    </div>

    <p class="text-sm text-body mb-4">{description}</p>

    <!-- Tags -->
    <div class="flex flex-wrap gap-2 mb-4">
      {tags.map(tag => (
        <span class="px-2.5 py-0.5 text-xs font-medium bg-tag-bg text-tag-text rounded-full">
          {tag}
        </span>
      ))}
    </div>

    <!-- Links -->
    {hasLinks && (
      <div class="flex flex-wrap gap-3">
        {github && (
          <a href={github} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1 text-sm text-primary hover:text-primary-hover transition-colors">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
            <span data-i18n="projects.view_github">GitHub</span>
          </a>
        )}
        {demo && (
          <a href={demo} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1 text-sm text-primary hover:text-primary-hover transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
            <span data-i18n="projects.view_demo">Demo</span>
          </a>
        )}
        {video && (
          <a href={video} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1 text-sm text-primary hover:text-primary-hover transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            <span data-i18n="projects.view_video">影片</span>
          </a>
        )}
        {report && (
          <a href={report} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1 text-sm text-primary hover:text-primary-hover transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
            <span data-i18n="projects.view_report">報告</span>
          </a>
        )}
      </div>
    )}
  </div>
</div>
